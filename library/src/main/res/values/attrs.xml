<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DialogSpots">
        <attr name="DialogTitleAppearance" format="reference" />
        <attr name="DialogTitleText" format="reference|string" />
        <attr name="DialogSpotColor" format="reference|color" />
        <attr name="DialogSpotCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomRecordBar">
        <attr name="btn_background_color" format="reference|integer" />
        <attr name="micro_btn_visible" format="boolean" />
        <attr name="record_btn_visible" format="boolean" />
        <attr name="submit_btn_visible" format="boolean" />
        <attr name="call_button_visible" format="boolean" />
        <attr name="record_btn" format="string" />
        <attr name="record_btn_color" format="color" />
        <attr name="record_btn_drawable" format="reference|integer" />
        <attr name="submit_btn_text" format="string" />
        <attr name="submit_btn_text_color" format="color" />
        <attr name="submit_btn_drawable" format="reference|integer" />
        <attr name="call_btn_text" format="string" />
        <attr name="call_btn_text_color" format="color" />
        <attr name="call_btn_drawable" format="reference|integer" />
        <attr name="micro_btn_text" format="string" />
        <attr name="micro_btn_text_color" format="color" />
        <attr name="micro_btn_drawable" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <string-array name="GetImgType">
        <item>本机相册</item>
        <item>照相机</item>
    </string-array>

    <string-array name="SexType">
        <item>女</item>
        <item>男</item>
    </string-array>

    <declare-styleable name="CodeView">
        <attr name="length" format="integer" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="code" format="string" />
        <attr name="codeColor" format="color" />
        <attr name="pointRadius" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="showType" format="enum">
            <enum name="word" value="1" />
            <enum name="password" value="2" />
        </attr>
    </declare-styleable>
</resources>
