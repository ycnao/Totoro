<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 首页Tab样式 -->
    <style name="tab_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- 首页更多 -->
    <style name="more_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dimen_20</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:drawablePadding">@dimen/dimen_7</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_3</item>
    </style>

    <!-- 带箭头的item -->
    <style name="layout_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_bg_select</item>
    </style>

    <style name="text_icon_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
        <item name="android:paddingTop">@dimen/dimen_18</item>
        <item name="android:paddingBottom">@dimen/dimen_18</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/item_bg_select</item>
        <item name="android:drawableRight">@mipmap/ic_item_right</item>
        <item name="android:textColor">@color/text_3</item>
    </style>

    <style name="text_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
        <item name="android:paddingTop">@dimen/dimen_18</item>
        <item name="android:paddingBottom">@dimen/dimen_18</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_3</item>
        <item name="android:textSize">@dimen/size_15sp</item>
    </style>

    <style name="text_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
        <item name="android:paddingTop">@dimen/dimen_18</item>
        <item name="android:paddingBottom">@dimen/dimen_18</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_3</item>
    </style>

    <style name="text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_bg_select</item>
        <item name="android:paddingTop">@dimen/dimen_17</item>
        <item name="android:paddingBottom">@dimen/dimen_17</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
    </style>

    <style name="text_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:drawablePadding">@dimen/dimen_10</item>
        <item name="android:textColor">@color/grey01</item>
    </style>

    <style name="text_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">@dimen/dimen_5</item>
        <item name="android:background">@drawable/item_bg_select</item>
        <item name="android:drawableRight">@mipmap/ic_item_right</item>
        <item name="android:textColor">@color/grey51</item>
    </style>

    <!-- button -->
    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_45</item>
    </style>


    <!--一行输入样式-->
    <style name="input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_45</item>
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="input_text">
        <item name="android:layout_width">@dimen/dimen_70</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#3f3f3f</item>
    </style>

    <style name="input_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#414346</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">@dimen/dimen_10</item>
    </style>

    <!--一行的样式布局-->
    <style name="line_text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
