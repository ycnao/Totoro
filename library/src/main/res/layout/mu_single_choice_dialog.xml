<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/NDialog_container">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/n_dialog_bg_shape"
		android:orientation="vertical">

		<!-- 标题 -->

		<RelativeLayout
			android:layout_width="match_parent"
			android:paddingTop="@dimen/dimen_5"
			android:paddingBottom="@dimen/dimen_5"
			android:layout_height="wrap_content">

			<Button
				android:id="@+id/cancelBtn"
				style="@style/MuDialog_btn_cancel_title_1"
				android:layout_centerInParent="true"
				android:layout_marginStart="10dp"
				android:layout_marginLeft="10dp"
				android:visibility="gone" />

			<TextView
				android:id="@+id/titleTv"
				style="@style/MuDialog_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="@string/msg" />
		</RelativeLayout>

		<View style="@style/MuDialog_separate_line" />

		<!-- 内容 -->
		<ListView
			android:id="@+id/listView"
			style="@style/MuDialog_listView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
</RelativeLayout>
